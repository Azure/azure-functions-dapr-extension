{
  "bindings": [
    {
      "type": "httpTrigger",
      "name": "req",
      "authLevel": "function",
      "method": [ "post" ],
      "route": "topic/{topicName}"
    },
    {
      "type": "daprPublish",
      "direction": "out",
      "pubsubname": "messagebus",
      "topic": "{topicName}",
      "name": "payload"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    }
  ]
}